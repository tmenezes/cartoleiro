@using Cartoleiro.Web.AppCode
@using Cartoleiro.Web.Models.SharedModels
@{
    ViewBag.Title = "Home";
}

@section header{
    <div class="splash" style="background-position: 0 0;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <img class="logo" src="~/Images/cartola.png" alt="Mestre Cartoleiro" />
                    <h1>Mestre Cartoleiro</h1>
                    <p class="lead">Mestre Cartoleiro é a sua ferramenta para simular a escalação times no Cartola FC com o seu patrimônio e utilizando analisadores estatísticos de partidas anteriores.</p>
                    <p>
                        <a href="@Url.Action("Index", "Escalador")" class="btn btn-outline-inverse btn-primary btn-lg">Escalar Time &raquo;</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-4">
        <h2 class="page-header">Atacantes<small> os 5 melhores</small></h2>
        <p>
            @Html.Partial("_TabelaJogadoresMini", CartoleiroApp.MelhoresAtacantes)
        </p>
        @Html.Partial("_adQuadrado1")
    </div>
    <div class="col-md-4">
        <h2 class="page-header">Meias<small> os 5 melhores</small></h2>
        <p>
            @Html.Partial("_TabelaJogadoresMini", CartoleiroApp.MelhoresMeias)
        </p>
        @Html.Partial("_adQuadrado2")
    </div>
    <div class="col-md-4">
        <h2 class="page-header">Laterais<small> os 5 melhores</small></h2>
        <p>
            @Html.Partial("_TabelaJogadoresMini", CartoleiroApp.MelhoresLaterais)
