<div class="row">
    <div class="col-md-4">
        <h2 class="page-header">
            Defesa<small> os 5 melhores clubes</small>
        </h2>
        <p>
            @Html.Partial("_TabelaClubesMini", new ClubesComMediaDeSetorDoCampo(CartoleiroApp.MelhoresDefesas, SetorDoCampo.Defesa))
        </p>
        <a class="btn btn-default" href="@Url.Action("Index", "Clube")">Ver mais &raquo;</a>
    </div>
    <div class="col-md-4">
        <h2 class="page-header">Meio Campo<small> os 5 melhores clubes</small></h2>
