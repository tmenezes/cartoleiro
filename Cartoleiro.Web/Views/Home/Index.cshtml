@using Cartoleiro.Web.AppCode
@{
    ViewBag.Title = "Home";
}

@section header{
    <div class="splash" style="background-position: 0px 0px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <img class="logo" src="~/Images/cartola.png">
                    <h1>Cartoleiro</h1>
                    <p class="lead">Cartoleiro é a sua ferramenta para simular a escalação times no Cartola FC com o seu patrimônio e utilizando analisadores estatísticos de partidas anteriores.</p>
                    <p>
                        <a href="@Url.Action("Index", "Escalador")" class="btn btn-outline-inverse btn-primary btn-lg">Escalar Time &raquo;</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-4">
        <h2 class="page-header">Atacantes<small> os 5 melhores</small></h2>
        <p>
            @Html.Partial("_TabelaJogadoresMini", CartoleiroApp.MelhoresAtacantes)
        </p>
        @Html.Partial("_adQuadrado1")
    </div>
    <div class="col-md-4">
        <h2 class="page-header">Meias<small> os 5 melhores</small></h2>
        <p>
            @Html.Partial("_TabelaJogadoresMini", CartoleiroApp.MelhoresMeias)
        </p>
        @Html.Partial("_adQuadrado2")
    </div>
    <div class="col-md-4">
        <h2 class="page-header">Laterais<small> os 5 melhores</small></h2>
        <p>
            @Html.Partial("_TabelaJogadoresMini", CartoleiroApp.MelhoresLaterais)
        </p>
        @Html.Partial("_adQuadrado3")
    </div>
    <div class="col-md-4">
        <h2 class="page-header">
            Zagueiros<small> os 5 melhores</small>
        </h2>
        <p>
            @Html.Partial("_TabelaJogadoresMini", CartoleiroApp.MelhoresZagueiros)
        </p>
    </div>
    <div class="col-md-4">
        <h2 class="page-header">Goleiros<small> os 5 melhores</small></h2>
        <p>
            @Html.Partial("_TabelaJogadoresMini", CartoleiroApp.MelhoresGoleiros)
        </p>
    </div>
    <div class="col-md-4">
        <h2 class="page-header">Técnicos<small> os 5 melhores</small></h2>
        <p>
            @Html.Partial("_TabelaJogadoresMini", CartoleiroApp.MelhoresTecnicos)
        </p>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('body').prop('id', 'home');
            $('#home > .navbar').addClass('navbar-transparent');
            $('#home > .navbar').addClass('navbar-transparent');

            $('[data-toggle="tooltip"]').tooltip();
        })
    </script>
}
