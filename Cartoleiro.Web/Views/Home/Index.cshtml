            @Html.Partial("_TabelaJogadoresMini", CartoleiroApp.MelhoresZagueiros)
        </p>
        @Html.Partial("_adQuadrado4")
    </div>
    <div class="col-md-4">
        <h2 class="page-header">
            Goleiros<small> os 5 melhores</small>
        </h2>
        <p>
            @Html.Partial("_TabelaJogadoresMini", CartoleiroApp.MelhoresGoleiros)
        </p>
        @Html.Partial("_adQuadrado5")
