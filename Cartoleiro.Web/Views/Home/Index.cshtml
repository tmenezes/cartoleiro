@section scripts{
    <script>
        $(document).ready(function () {
            $('body').prop('id', 'home');
            $('#home > .navbar').addClass('navbar-transparent');
            $('#home > .navbar').addClass('navbar-transparent');

            $('[data-toggle="tooltip"]').tooltip();
        })
    </script>
}
