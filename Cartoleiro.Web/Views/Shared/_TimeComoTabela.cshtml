@model Cartoleiro.Core.Escalador.Time

@using Cartoleiro.Web.Helpers
@using Cartoleiro.Web.Models

@if (Model != null)
{
    <table class="table table-striped table-bordered table-cartoleiro">
        <thead>
            <tr>
                <th>Clube</th>
                <th>Jogador</th>
                <th>C$</th>
                <th>Média</th>
            </tr>
        </thead>
        @foreach (var jogador in Model.TodosJogadores)
        {
            <tr>
                @*<td><span class="text-muted">@string.Format("{0}º lugar", jogador.Clube.Campeonato.Posicao)</span><br />@jogador.Clube.Nome</td>*@
                <td><img src="@Url.Content(jogador.Clube.GetUrlImagem())" width="32" height="32" alt="@jogador.Clube.Nome" title="@jogador.Clube.Nome" /></td> 
                <td><span class="text-muted">@jogador.Posicao</span><br /><strong>@jogador.Nome</strong></td>
                <td>@jogador.Preco.Atual.ToString("F")</td>
                <td>@jogador.Pontuacao.Media.ToString("F")</td>
                
            </tr>
        }
    </table>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Custo e pontuação</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3 text-right">Custo do time:</div>
                <div class="">C$ @Model.TodosJogadores.Sum(j => j.Preco.Atual)</div>
            </div>
            <div class="row">
                <div class="col-md-3 text-right">Pontuação na última rodada:</div>
                <div class="">@Model.TodosJogadores.Sum(j => j.Pontuacao.Ultima) pontos</div>
            </div>
        </div>
    </div>
}
