<!DOCTYPE html>
<html>
<head>
    <meta charset="iso-8859-1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="Description" content="Mestre Cartoleiro: ferramenta para simular a escalação times no Cartola FC com o seu patrimônio (cartoletas) e utilizando analisadores estatísticos de partidas anteriores.">
    <meta name="keywords" content="mestre cartoleiro, cartoleiro, cartola, cartola fc, futebol, campeonato, brasileiro" />
    <meta name="robots" content="index, follow">
    <meta name="verification" content="be1d777226d2cd5e4d29cb890be79487" />
    <meta name="application-name" content="Mestre Cartoleiro">
    <title>@ViewBag.Title - Mestre Cartoleiro</title>
    <link rel="apple-touch-icon" sizes="114x114" href="/apple-icon-114x114.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon.ico">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cartoleiro", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Escalador", "Index", "Escalador")</li>
                    <li>@Html.ActionLink("Scouts ao vivo", "Index", "ScoutsAoVivo")</li>
                    <li>@Html.ActionLink("Confrontos", "Index", "Confrontos")</li>
                    <li>@Html.ActionLink("Contato", "Contato", "Home")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    @RenderSection("header", required: false)
    <div class="container body-content">
        @Html.Partial("_ListaClubes")
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cartoleiro</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/cartoleiro")
    @Html.Partial("_GoogleAnalitics")
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
