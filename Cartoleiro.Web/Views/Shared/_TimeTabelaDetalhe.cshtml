@model Cartoleiro.Core.Escalador.Time

@using Cartoleiro.Web.Helpers
@using Cartoleiro.Web.Models

@if (Model != null)
{
    <table class="table table-striped table-bordered table-cartoleiro">
        <thead>
            <tr>
                <th class="text-left" style="width: 58%">Jogador</th>
                <th class="text-right" style="width: 8%">Jogos</th>
                <th class="text-right" style="width: 8%">C$</th>
                <th class="text-right" style="width: 8%">Pt. Média</th>
                <th class="text-right" style="width: 8%">Pt. Últ.</th>
                <th class="text-center" style="width: 10%">Confronto</th>
            </tr>
        </thead>
        @foreach (var jogador in Model.TodosJogadores)
        {
            <tr>
                <td>
                    <div class="media">
                        <div class="media-left media-middle">
                            <img src="@jogador.Clube.GetUrlImagem()" width="32" height="32" alt="@jogador.Clube.Nome" data-toggle="tooltip" data-placement="left" title="@jogador.Clube.GetTooltip()" />
                        </div>
                        <div class="media-body media-jogador">
                            <span class="badge pull-right">@jogador.Status</span>
                            <span class="text-muted">@jogador.Posicao</span><br/><strong>@jogador.Nome</strong>
                        </div>
                    </div>
                </td>
                <td class="text-right">@jogador.Jogos.ToString()</td>
                <td class="text-right">@jogador.Preco.Atual.ToString("F")</td>
                <td class="text-right">@jogador.Pontuacao.Media.ToString("F")</td>
                <td class="text-right">@jogador.Pontuacao.Ultima.ToString("F")</td>
                <td class="text-center">                    
                    <img src="@jogador.Clube.GetUrlImagem()" width="24" height="24" alt="@jogador.Clube.Nome" data-toggle="tooltip" data-placement="left" title="@jogador.Clube.GetTooltip()"/>
                    <span style="margin: 5px">X</span>
                    <img src="@jogador.Clube.AdversarioNaProximaRodada().GetUrlImagem()" width="24" height="24" alt="@jogador.Clube.AdversarioNaProximaRodada().Nome" data-toggle="tooltip" data-placement="right" title="@jogador.Clube.AdversarioNaProximaRodada().GetTooltip()"/>
                </td>
            </tr>
        }
    </table>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Custo e pontuação</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3 text-right">Custo do time:</div>
                <div class="">C$ @Model.TodosJogadores.Sum(j => j.Preco.Atual)</div>
            </div>
            <div class="row">
                <div class="col-md-3 text-right">Pontuação na última rodada:</div>
                <div class="">@Model.TodosJogadores.Sum(j => j.Pontuacao.Ultima) pontos</div>
            </div>
        </div>
    </div>
}
